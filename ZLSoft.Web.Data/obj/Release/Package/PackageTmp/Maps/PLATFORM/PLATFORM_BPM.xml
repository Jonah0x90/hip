      是否内置 AS "IsSystem",
      是否作废 AS "IsInvalid"
      FROM 系统_BPM
      <dynamic prepend="WHERE">
        <isPropertyAvailable prepend=" AND " property="ID" >ID=#ID#</isPropertyAvailable>
